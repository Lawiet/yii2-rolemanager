{
    "name": "lawiet/yii2-rolemanager",
    "description": "RBAC with access menu",
    "type": "yii2-extension",
    "keywords": ["yii2","extension","auth","rbac","module","manager","role","rolemanager"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/lawiet/yii2-rolemanager/issues?state=open",
		"source": "https://github.com/lawiet/yii2-rolemanager"
	},
    "authors": [
        {
            "name": "Jorge Gonzalez",
            "email": "ljorgelgonzalez@outlook.com"
        }
    ],
    "minimum-stability": "dev",
	"prefer-stable": true,
    "require": {
	    "yiisoft/yii2": "^2.0.8",
        "yiisoft/yii2-jui": "*",
        "yiisoft/yii2-bootstrap": "*",
		"kartik-v/yii2-icons": "@dev",
        "kartik-v/yii2-widgets": "*",
        "wbraganca/yii2-selectivity": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.1"
    },
    "suggest": {
        "yiisoft/yii2-bootstrap": "Used when using layout 'left-menu', 'right-menu' or 'top-menu'"
    },
    "autoload": {
        "psr-4": {
            "lawiet\\rbac\\": ""
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --config=.php_cs",
        "cs-fix-dry-run": "php-cs-fixer fix --config=.php_cs --dry-run --diff"
    }
}
